{
  "name": "WordKache - Save your translations",
  "description": "Turn your online translations into studyable flashcards!",
  "version": "0.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open WordKache Popup"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "*://translate.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./static/js/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js",
    "type": "module"
  }
}